{
    "version": "1.7.4",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "diagnostics": true,
        "listFiles": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": false
    },
    "files": [
        "../typings/tsd.d.ts",
        "./BundleBuilder.ts",
        "./BundleCompiler.ts",
        "./BundleParser.ts",
        "./BUndleResult.ts",
        "./CachingCompilerHost.ts",
        "./Compiler.ts",
        "./CompilerError.ts",
        "./CompilerResult.ts",
        "./CompileStream.ts",
        "./DependencyBuilder.ts",
        "./DiagnosticsReporter.ts",
        "./EventEmitter.ts",
        "./Glob.ts",
        "./Logger.ts",
        "./StatisticsReporter.ts",
        "./TsCore.ts",
        "./TsProject.ts",
        "./TsVinylFile.ts",
        "./ProjectBuildContext",
        "./ProjectConfig",
        "./Project.ts",
        "./Utilities.ts",
        "./WatchCompilerHost.ts"
    ],
    "bundles": {
        "tsproject": {
            "files": [ "../typings/tsd.d.ts", "./Glob.ts", "./EventEmitter.ts" ],
            "config": {
                "declaration": true,
                "sourceMap": true,
                "outDir": "./bundle"
            }
        },
        "test": {
            "files": [ "../typings/tsd.d.ts", "./TsProject.ts" ],
            "config": {
                "declaration": true,
                "sourceMap": true,
                "outDir": "./bundle"
            }
        }
    }
}